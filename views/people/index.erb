<div class="actions">
  <a href="/people/new">Add New Person</a>
</div>

<h1>People</h1>

<table class="table-standard">
  <thead>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Date of Birth</th>
  </tr>
  </thead>
  <tbody>
  <% people.each do |person| %>
    <tr>
      <td>
        <a href="/people/<%= person[:id] %>">
          <%= person[:first_name] %>
        </a>
      </td>
      <td>
        <a href="/people/<%= person[:id] %>">
          <%= person[:last_name] %>
        </a>
      </td>
      <td>
        <%= person[:date_of_birth] ? person[:date_of_birth].strftime("%-m/%-d/%Y") : nil %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>